<div class="container">

  <h1>Student Roll</h1>


        <ul>

          <% @students.each do |student|%>

            <li><%= link_to student.name, student_path(student) %> <%= student.id %> </li>

            <li><%= button_to 'Delete a Student!', student_path(:id => student), :method => :delete %> </li>

          <% end %>

        </ul>



          <%= link_to 'Add a Student', '/students/new' %>


</div>
